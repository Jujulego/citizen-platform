extends base

append css
    link(rel="stylesheet" href="/static/scss/profil.css")

block content
    header(class="row ") 
        div(class="col justify-content-end") 
            h1(class="text-white") Titre Mission

    section(class="row")
        aside(class="col-3")
            div(class="card mb-3 card-infos")
                div(class="card-header")
                    p(class="mb-0") Informations 

                ul(class="list-group list-group-flush")
                    li(class="list-group-item")
                        span Lieu

                    li(class="list-group-item")
                        span Disponibilités demandées

                    li(class="list-group-item")
                        span Missions régulière/ponctuelle
                        
                div(class="card-header")
                    p(class="mb-0") Contact
                    
                ul(class="list-group list-group-flush")
                    li(class="list-group-item")
                        span mail
                 


        article(class="col")
            div(class="card")
                div(class="card-header")
                    ul(class="nav nav-tabs card-header-tabs" role="tablist")
                        li(class="nav-item")
                            a(class="nav-link active" data-toggle="tab" href="#competences") Informations complémentaires

                        li(class="nav-item")
                            a(class="nav-link" data-toggle="tab" href="#dispo") Candidatures

                div(class="card-body")
                    div(class="tab-content")
                        div(class="tab-pane fade show active" id="competences" role="tabpanel")
                            h4 Description de la mission
                            p Blabla
                            h4 Compétences requises
                            p Blabla
                            h4 Domaine d'intervention
                            p Blabla
                        
                        div(class="tab-pane fade" id="dispo" role="tabpanel") 
                            div(class="card m-3")
                                div(class="card-body")
                                    a(href="#")
                                        i(class="fas fa-search")  
                                        i  Rechercher
                            include parts/cardCandidat
                            include parts/cardCandidat
